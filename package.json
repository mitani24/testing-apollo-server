{
  "name": "testing-apollo-server",
  "version": "1.0.0",
  "license": "MIT",
  "author": "mitani24 <h.mitani@ashita-team.com>",
  "main": "index.js",
  "scripts": {
    "codegen": "run-p codegen:*",
    "codegen:graphql": "graphql-codegen",
    "codegen:openapi-types": "openapi-typescript ./openapi.json --output src/lib/generated/openapi-types.ts",
    "deploy": "serverless deploy",
    "dev": "rm -rf .build && run-p dev:*",
    "dev:schema": "SHELL=/bin/bash chokidar './graphql/**/*.graphql' -c 'mkdir -p .build && cp -r graphql .build && yarn codegen'",
    "dev:sls": "NODE_ENV=development serverless offline --host 0.0.0.0 --httpPort 3001",
    "format": "prettier --write .",
    "lint": "eslint './**/*.{ts,graphql}'",
    "lint:fix": "yarn lint --fix",
    "lint:schema": "graphql-schema-linter --format compact",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "undeploy": "serverless remove",
    "update:openapi-schema": "dotenv -e .env ./bin/update-openapi.sh"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/schema": "^8.3.1",
    "apollo-datasource-rest": "^3.5.1",
    "apollo-server-lambda": "^3.6.2",
    "graphql": "^16.2.0",
    "graphql-query-complexity": "^0.11.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "typescanner": "^0.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-document-nodes": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@graphql-eslint/eslint-plugin": "^3.7.0",
    "@stoplight/prism-cli": "^4.6.1",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "chokidar-cli": "^3.0.0",
    "dotenv-cli": "^4.1.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-folders": "^1.0.3",
    "eslint-plugin-import": "^2.25.4",
    "graphql-schema-linter": "^2.0.1",
    "jest": "^27.4.7",
    "msw": "^0.36.7",
    "npm-run-all": "^4.1.5",
    "openapi-typescript": "^5.1.1",
    "prettier": "^2.5.1",
    "serverless": "^2.72.2",
    "serverless-offline": "^8.3.1",
    "serverless-plugin-typescript": "^2.1.0",
    "typescript": "^4.5.5"
  }
}
